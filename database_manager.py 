# database_manager.py
import sqlite3
import datetime
from datetime import datetime

class DatabaseManager:
    def __init__(self, db_path="sbb_leads.db"):
        self.db_path = db_path
        self.init_db()
    
    def init_db(self):
        """ProÅ¡irena inicijalizacija baze - dodaje nove tabele ako ne postoje"""
        conn = sqlite3.connect(self.db_path)
        c = conn.cursor()
        
        # Tabela za statistiku (dodajemo ako ne postoji)
        c.execute('''
            CREATE TABLE IF NOT EXISTS bot_stats (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                date TEXT UNIQUE,
                messages_processed INTEGER DEFAULT 0,
                new_leads INTEGER DEFAULT 0
            )
        ''')
        
        conn.commit()
        conn.close()
        print("âœ… Database Manager initialized successfully")
    
    def add_lead(self, name, phone, package, message="", source="telegram"):
        """Dodavanje leada sa automatskom statistikom"""
        conn = sqlite3.connect(self.db_path)
        c = conn.cursor()
        
        timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        
        # Dodaj lead u postojeÄ‡u tabelu leads
        c.execute('''
            INSERT INTO leads (name, phone, package, message, timestamp, source)
            VALUES (?, ?, ?, ?, ?, ?)
        ''', (name, phone, package, message, timestamp, source))
        
        # AÅ¾uriraj dnevnu statistiku
        today = datetime.now().strftime("%Y-%m-%d")
        c.execute('''
            INSERT OR REPLACE INTO bot_stats (date, messages_processed, new_leads)
            VALUES (?, 
                    COALESCE((SELECT messages_processed FROM bot_stats WHERE date=?), 0) + 1,
                    COALESCE((SELECT new_leads FROM bot_stats WHERE date=?), 0) + 1)
        ''', (today, today, today))
        
        conn.commit()
        lead_id = c.lastrowid
        conn.close()
        
        print(f"âœ… Lead added: {name} - {package}")
        return lead_id
    
    def get_daily_stats(self):
        """Dobijanje dnevne statistike"""
        conn = sqlite3.connect(self.db_path)
        c = conn.cursor()
        
        today = datetime.now().strftime("%Y-%m-%d")
        c.execute('SELECT * FROM bot_stats WHERE date = ?', (today,))
        result = c.fetchone()
        
        conn.close()
        
        if result:
            return {
                'date': result[1],
                'messages_processed': result[2],
                'new_leads': result[3]
            }
        else:
            return {
                'date': today,
                'messages_processed': 0,
                'new_leads': 0
            }
    
    def get_lead_stats(self):
        """Detaljna statistika leadova"""
        conn = sqlite3.connect(self.db_path)
        c = conn.cursor()
        
        c.execute('SELECT COUNT(*) FROM leads WHERE status = "new"')
        new_leads = c.fetchone()[0]
        
        c.execute('SELECT COUNT(*) FROM leads WHERE status = "contacted"')
        contacted = c.fetchone()[0]
        
        c.execute('SELECT COUNT(*) FROM leads')
        total = c.fetchone()[0]
        
        # Leadovi po paketima
        c.execute('SELECT package, COUNT(*) FROM leads GROUP BY package')
        by_package = dict(c.fetchall())
        
        conn.close()
        
        return {
            'new_leads': new_leads,
            'contacted_leads': contacted,
            'total_leads': total,
            'leads_by_package': by_package
        }
    
    def get_recent_leads(self, limit=10):
        """Dobijanje nedavnih leadova"""
        conn = sqlite3.connect(self.db_path)
        conn.row_factory = sqlite3.Row
        c = conn.cursor()
        
        c.execute('''
            SELECT * FROM leads 
            ORDER BY timestamp DESC 
            LIMIT ?
        ''', (limit,))
        
        leads = [dict(row) for row in c.fetchall()]
        conn.close()
        return leads

# Test
if __name__ == "__main__":
    db = DatabaseManager()
    print("ðŸ“Š Database Manager Test:")
    print("Daily Stats:", db.get_daily_stats())
    print("Lead Stats:", db.get_lead_stats())
    print("Recent Leads:", db.get_recent_leads(3))
